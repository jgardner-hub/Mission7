@{
}

@model IEnumerable<string>

<div class="d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-categiryType="" asp-route-pageNum="" class="btn btn-secondary ">Home</a>

    <a class="btn btn-outline-secondary" data-bs-toggle="collapse" href="#s_" role="button" aria-expanded="false" aria-controls="myId">
        Filters
    </a>

    <div class="collapse" id="s_">

            @foreach (string c in Model)
            {
                <a asp-controller="Home" asp-action="Index" asp-route-categoryType="@c" asp-route-pageNum="1"
                   class="btn @(ViewBag.SelectedCategory == c ? "btn-secondary" : "btn-outline-secondary")">@c</a>

            }

    </div>


</div>