@inherits LayoutComponentBase

    <div class="bg-secondary text-white p-2" style="border-radius:3px;">
        

        <div class="container-fluid">
            <div class="row">
                <div class="col">
                    <span class="navbar-brand m-lg-2">Bookstore Administration</span>
                </div>
                <div class="col-1">
                    <a class="btn btn-sm btn-secondary" href="/account/logout">Log Out</a>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">

        <div class="row p-2">

            <div class="col-3">
                <div class="d-grid gap-2">
                    <NavLink class="btn btn-outline-secondary" href="/admin/books"
                             ActiveClass="btn-secondary text-white" Match="NavLinkMatch.Prefix">Books</NavLink>
                    <NavLink class="btn btn-outline-secondary" href="/admin/orders"
                             ActiveClass="btn-secondary text-white" Match="NavLinkMatch.Prefix">Orders</NavLink>
                </div>

            </div>

            <div class="col">
                @Body
            </div>



        </div>
    </div>